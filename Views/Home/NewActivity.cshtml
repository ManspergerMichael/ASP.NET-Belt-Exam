@model UserActivity
<div class="Container">
    <div class="Header">
        <h1 style="display:inline-block;">Dojo Activity Center</h1>
        <a href="/Dashboard">Home</a>
        <a href="Logout">Logout</a>
    </div>
<div class="CreateActivityBody">
    <h1>Create An Activity!</h1>
    <form asp-action="NewActivityProcess" asp-controller="Home" method="Post">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input asp-for="Title"><br>
        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date"><br>
        <span asp-validation-for="Time"></span>
        <label asp-for="Time"></label>
        <input asp-for="Time"><br>
        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration"></label>
        <input asp-for="Duration"><br>
        <label asp-for="DurationUnits"></label>
        <select asp-for="DurationUnits">
            <option value="Minutes">Minutes</option>
            <option value="Hours">Hours</option>
            <option value="Days">Days</option>
        </select><br>
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="10" cols="30"></textarea><br>
        <input type="submit" value="Create Activity">
    </form>
</div>

</div>
